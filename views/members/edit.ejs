<h2>Edit Member</h2>

<div class="edit-member-form">
	
	<form action="/members/<%= editMember.id %>?_method=PUT" method="POST">
		<div class="form-row">
			<label class="form-item" name="first_name">First Name</label>
			<input class="form-item" type="text" name="first_name" value="<%= editMember.first_name %>">
		</div>
		<div class="form-row">
			<label class="form-item" name="last_name">Last Name</label>
			<input class="form-item" type="text" name="last_name" value="<%= editMember.last_name %>">
		</div>
		<div class="form-row">
			<label class="form-item" name="email">Email</label>
			<input class="form-item" type="text" name="email" value="<%= editMember.email %>">
		</div>
		<div class="form-row">
			<label class="form-item" name="phone">Phone</label>
			<input class="form-item" type="text" name="phone" value="<%= editMember.phone %>">
		</div>
		<a class="form-button" href="/members">Cancel</a>
		<button class="form-button" type="submit">Update</button>	
	</form>

</div>